{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Drift desktop permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "store:default",
    "global-shortcut:allow-register",
    "global-shortcut:allow-unregister",
    "global-shortcut:allow-unregister-all",
    "global-shortcut:allow-is-registered",
    "dialog:default",
    "dialog:allow-save",
    "fs:default",
    "fs:allow-read-file",
    "fs:allow-write-file",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$VIDEO/**" },
        { "path": "$TEMP/**" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$HOME/**" },
        { "path": "$DESKTOP/**" },
        { "path": "$DOCUMENT/**" },
        { "path": "**" }
      ]
    },
    "shell:default",
    "process:default"
  ]
}
