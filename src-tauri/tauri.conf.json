{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Drift",
  "version": "0.1.0",
  "identifier": "com.drift.desktop",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000/recorder",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build:tauri"
  },
  "app": {
    "windows": [
      {
        "title": "Drift",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://unpkg.com; style-src 'self' 'unsafe-inline'; connect-src 'self' https://openrouter.ai https://unpkg.com; img-src 'self' data: blob:; media-src 'self' blob:; worker-src 'self' blob:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "both"
      }
    }
  },
  "plugins": {}
}
